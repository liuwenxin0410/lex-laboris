{
  "name": "lex-laboris-ui",
  "version": "1.0.0",
  "description": "工时壁垒 - 劳动者的自我保护工具",
  "main": "dist/main.js",
  "scripts": {
    "dev": "yarn install && yarn build:ui && electron .",
    "dev-electron": "electron .",
    "build:ui": "webpack --config webpack.config.js",
    "dist": "yarn build:ui && electron-builder"
  },
  "author": "Lex Laboris Community",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/cross-spawn": "^6.0.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@types/node-fetch": "2",
    "cross-spawn": "^7.0.3",
    "node-fetch": "2"
  },
  "build": {
    "appId": "com.lexlaboris.app",
    "productName": "工时壁垒",
    "copyright": "Copyright © 2024 Lex Laboris Community",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "capture.html",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "extraResources/",
        "to": "extraResources/"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}